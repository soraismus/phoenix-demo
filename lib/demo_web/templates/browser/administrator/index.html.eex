<h2>Listing Administrators</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for administrator <- @administrators do %>
    <tr>
      <td><%= administrator.id %></td>
      <td><%= administrator.username %></td>
      <td><%= administrator.email %></td>

      <td class="text-right">
        <span><%= link "Show", to: administrator_path(@conn, :show, administrator), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: administrator_path(@conn, :delete, administrator), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Administrator", to: administrator_path(@conn, :new) %></span>
