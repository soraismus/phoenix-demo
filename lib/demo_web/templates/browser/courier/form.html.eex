<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= inputs_for f, :courier, fn fa -> %>
    <div class="form-group">
      <%= label fa, :name, class: "control-label" %>
      <%= text_input fa, :name, class: "form-control" %>
      <%= error_tag fa, :name %>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :username, class: "control-label" %>
    <%= text_input f, :username, class: "form-control" %>
    <%= error_tag f, :username %>
  </div>

  <%= inputs_for f, :courier, fn fa -> %>
    <div class="form-group">
      <%= label fa, :address, class: "control-label" %>
      <%= text_input fa, :address, class: "form-control" %>
      <%= error_tag fa, :address %>
    </div>

    <div class="form-group">
      <%= label fa, :email, class: "control-label" %>
      <%= text_input fa, :email, class: "form-control" %>
      <%= error_tag fa, :email %>
    </div>
  <% end %>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
